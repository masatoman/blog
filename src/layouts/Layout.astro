---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "雑記ブログ - ゲーム、開発、投資、雑記について書いています" } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-G8NRLMD1XB"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-G8NRLMD1XB');
    </script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gray-50 font-sans">
    <!-- ナビゲーションバー -->
    <nav class="bg-white border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <a href="/blog/" class="text-xl font-semibold text-gray-900">
              雑記ブログ
            </a>
          </div>
              <div class="flex items-center space-x-8">
                <a href="/blog/" class="nav-link">ホーム</a>
                <a href="/blog/blogs" class="nav-link">ブログ</a>
                <a href="/blog/investment-results" class="nav-link">投資結果</a>
              </div>
        </div>
      </div>
    </nav>
    
    <main>
      <slot />
    </main>
    
    <footer class="bg-gray-50 border-t border-gray-200 py-8 mt-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <p class="text-gray-600 mb-4">雑記ブログ</p>
          <div class="flex justify-center space-x-6">
            <a href="/blog/rss.xml" class="text-gray-500 hover:text-gray-700">
              RSS
            </a>
            <a href="https://github.com" class="text-gray-500 hover:text-gray-700">
              GitHub
            </a>
          </div>
          <div class="mt-4 pt-4 border-t border-gray-200">
            <p class="text-gray-500 text-sm">&copy; 2024 雑記ブログ. All rights reserved.</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>