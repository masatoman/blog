---
import Layout from '../../layouts/Layout.astro';

const investmentResults = [
  {
    id: 'high-dividend-2025-10',
    title: '高配当株スクリーニング結果',
    date: '2025年10月16日',
    description: '投資判断特化型高配当株スクリーニング結果（16銘柄）',
    url: '/blog-monakit/enhanced_dividend_result_20251016_145023.html',
    type: 'dividend',
    icon: '💰'
  },
  {
    id: 'netnet-2025-10',
    title: 'ネットネット株スクリーニング結果',
    date: '2025年10月15日',
    description: 'ネットネット株分析結果（割安株のスクリーニング）',
    url: '/blog-monakit/netnet_result.html',
    type: 'netnet',
    icon: '🔍'
  }
];
---

<Layout title="投資結果 - 雑記ブログ">
  <main class="max-w-6xl mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">📊 投資結果一覧</h1>
      <p class="text-lg text-gray-600">
        高配当株スクリーニングやネットネット株分析などの投資分析結果をまとめています。
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2">
      {investmentResults.map((result) => (
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow border border-gray-200">
          <div class="p-6">
            <div class="flex items-center mb-3">
              <span class="text-2xl mr-3">{result.icon}</span>
              <div>
                <h2 class="text-xl font-semibold text-gray-900">{result.title}</h2>
                <p class="text-sm text-gray-500">{result.date}</p>
              </div>
            </div>
            
            <p class="text-gray-600 mb-4">{result.description}</p>
            
            <div class="flex items-center justify-between">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                {result.type === 'dividend' ? '高配当株' : 'ネットネット株'}
              </span>
              
              <a 
                href={result.url} 
                target="_blank"
                class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 transition-colors"
              >
                結果を見る →
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>
